<Window x:Class="DogApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dog App" Height="450" Width="600">
    <Grid>
        
        <Image Name="dogImage" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="300"/>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Button Content="Get Random Dog" Width="150" Margin="5" Click="GetRandomDog_Click"/>
            <Button Content="List All Breeds" Width="150" Margin="5" Click="ListAllBreeds_Click"/>
            <Button Content="Get By Breed" Width="150" Margin="5" Click="GetByBreed_Click"/>
            <Button Content="Get By Sub-Breed" Width="150" Margin="5" Click="GetBySubBreed_Click"/>
            <Button Content="Browse Breeds" Width="150" Margin="5" Click="BrowseBreeds_Click"/>
        </StackPanel>

        
        <ListBox Name="breedList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="400" Margin="10"/>
    </Grid>
</Window>
